<Window x:Class="PresentationLayer.ArticleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PresentationLayer"
        d:DataContext="{d:DesignInstance local:ArticleWindow}"
        mc:Ignorable="d"
        Title="ArticleWindow" Height="450" Width="1134">
    <Grid>

        <!--TextBox Search-->
        <TextBox x:Name="Txt_SearchArticle" 
                 Margin="41,31,547,0" 
                 TextWrapping="Wrap" 
                 Text="Search Article" 
                 VerticalAlignment="Top" 
                 FontSize="16" 
                 BorderThickness="0,0,0,1"/>

        <!--Button Search-->
        <Button x:Name="Cmd_SearchArticle" 
                Content="Search" 
                HorizontalAlignment="Left" 
                Margin="671,30,0,0" 
                VerticalAlignment="Top" 
                Height="23"
                Width="88" 
                FontSize="14"
                FlowDirection="LeftToRight"
                Padding="1,1,1,1"
                UseLayoutRounding="False" 
                BorderThickness="0,0,0,0"
                Background="#FFD6D6D6" 
                Foreground="Black" Click="Cmd_SearchArticle_Click">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Button.Resources>
        </Button>
        
        <!--DataGrid Article-->
        <DataGrid x:Name="ArticleDataGrid"  Margin="41,89,480,117" BorderThickness="0,0,0,0" ItemsSource="{Binding Path=Articles}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id"  Binding="{Binding Path=Id}"/>
                <DataGridTextColumn Header="Name"  Binding="{Binding Path=Name}"/>
                <DataGridTextColumn Header="Article Group" Binding="{Binding Path=ArticleGroup}"/>
                <DataGridTextColumn Header="Price" Binding="{Binding Path=Price}"/>
            </DataGrid.Columns>
        </DataGrid>

        <!--Button Add-->
        <Button x:Name="Cmd_AddArticle" 
                Content="Add" 
                HorizontalAlignment="Left" 
                Margin="671,132,0,0" 
                VerticalAlignment="Top" 
                Height="23" 
                Width="88" 
                FontSize="14" 
                FlowDirection="LeftToRight" 
                Padding="1,1,1,1" 
                UseLayoutRounding="False" 
                BorderThickness="0,0,0,0" 
                Background="#FFD6D6D6" 
                Foreground="Black" Click="Cmd_AddArticle_Click" >
                <!--Click="Cmd_AddArticle_Click"-->
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Button.Resources>
        </Button>

        <!--Button Save-->
        <Button x:Name="Cmd_SaveArticle" 
                Content="Save" 
                HorizontalAlignment="Left" 
                Margin="671,172,0,0" 
                VerticalAlignment="Top" 
                Height="23" 
                Width="88" 
                FontSize="14" 
                FlowDirection="LeftToRight"
                Padding="1,1,1,1"
                UseLayoutRounding="False" 
                BorderThickness="0,0,0,0" 
                Background="#FFD6D6D6" 
                Foreground="Black" Click="Cmd_SaveArticle_Click">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Button.Resources>
        </Button>

        <!--Button Modify-->
        <Button x:Name="Cmd_ModifyArticle" 
                Content="Modify" 
                HorizontalAlignment="Left" 
                Margin="671,212,0,0" 
                VerticalAlignment="Top"
                Height="23"
                Width="88" 
                FontSize="14"
                FlowDirection="LeftToRight"
                Padding="1,1,1,1" 
                UseLayoutRounding="False"
                BorderThickness="0,0,0,0" 
                Background="#FFD6D6D6" 
                Foreground="Black" Click="Cmd_ModifyArticle_Click">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Button.Resources>
        </Button>

        <!--Button Cancel-->
        <Button x:Name="Cmd_Cancel" 
                Content="Cancel" 
                HorizontalAlignment="Left"
                Margin="671,294,0,0"
                VerticalAlignment="Top" 
                Height="23"
                Width="88" 
                FontSize="14" 
                FlowDirection="LeftToRight" 
                Padding="1,1,1,1"
                UseLayoutRounding="False" 
                BorderThickness="0,0,0,0"
                Background="#FFD6D6D6" 
                Foreground="Black" Click="Cmd_Cancel_Click">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Button.Resources>
        </Button>

        <!--Button Delete-->
        <Button x:Name="Cmd_Delete" 
                Content="Delete" 
                HorizontalAlignment="Left" 
                Margin="671,252,0,0"
                VerticalAlignment="Top"
                Height="23" 
                Width="88"
                FontSize="14" 
                FlowDirection="LeftToRight" 
                Padding="1,1,1,1" 
                UseLayoutRounding="False" 
                BorderThickness="0,0,0,0" 
                Background="#FFD6D6D6" 
                Foreground="Black" Click="Cmd_Delete_Click">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Button.Resources>
        </Button>


        <!--Button Add Copy-->
        <Button x:Name="Cmd_AddArticle_Copy" Content="Add" HorizontalAlignment="Left" Margin="1029,132,0,0" VerticalAlignment="Top" Height="23" Width="88" FontSize="14" FlowDirection="LeftToRight" Padding="1,1,1,1" UseLayoutRounding="False" BorderThickness="0,0,0,0" Background="#FFD6D6D6" Foreground="Black">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Button.Resources>
        </Button>

        <!--Button Save Copy-->
        <Button x:Name="Cmd_SaveArticle_Copy" Content="Save" HorizontalAlignment="Left" Margin="1029,172,0,0" VerticalAlignment="Top" Height="23" Width="88" FontSize="14" FlowDirection="LeftToRight" Padding="1,1,1,1" UseLayoutRounding="False" BorderThickness="0,0,0,0" Background="#FFD6D6D6" Foreground="Black">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Button.Resources>
        </Button>

        <!--Button Modify Copy-->
        <Button x:Name="Cmd_ModifyArticle_Copy" Content="Modify" HorizontalAlignment="Left" Margin="1029,212,0,0" VerticalAlignment="Top" Height="23" Width="88" FontSize="14" FlowDirection="LeftToRight" Padding="1,1,1,1" UseLayoutRounding="False" BorderThickness="0,0,0,0" Background="#FFD6D6D6" Foreground="Black">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Button.Resources>
        </Button>

        <!--Button Cancel Copy-->
        <Button x:Name="Cmd_Cancel_Copy" Content="Cancel" HorizontalAlignment="Left" Margin="1029,294,0,0" VerticalAlignment="Top" Height="23" Width="88" FontSize="14" FlowDirection="LeftToRight" Padding="1,1,1,1" UseLayoutRounding="False" BorderThickness="0,0,0,0" Background="#FFD6D6D6" Foreground="Black">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Button.Resources>
        </Button>

        <!--Button Delete Copy-->
        <Button x:Name="Cmd_Delete_Copy" Content="Delete" HorizontalAlignment="Left" Margin="1029,252,0,0" VerticalAlignment="Top" Height="23" Width="88" FontSize="14" FlowDirection="LeftToRight" Padding="1,1,1,1" UseLayoutRounding="False" BorderThickness="0,0,0,0" Background="#FFD6D6D6" Foreground="Black">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Button.Resources>
        </Button>

        <!--DataGrid ArticleGroup-->
        <DataGrid x:Name="ArticleGroupDataGrid"  Margin="843,89,125,117" BorderThickness="0,0,0,0" ItemsSource="{Binding Path= ArticleGroups}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id"  Binding="{Binding Path= Id}"/>
                <DataGridTextColumn Header="Name"  Binding="{Binding Path= Name}"/>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>
